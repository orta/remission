{
  "presets": [
    "es2015",
    "stage-3",
    "react"
  ],
  "plugins": [
    "react-relay",
    ["styled-components", {
      "ssr": true,
      "displayName": true,
      "minify": true,
      "transpileTemplateLiterals": true
      // "preprocess": true // still experimental
    }]
  ],
  "env": {
    "test": {
      "plugins": [
        ["styled-components", {
          "ssr": true
        }]
      ]
    }
  }
}
